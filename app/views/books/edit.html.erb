<div class="row">
<div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <ul>
<%= @book.errors.count %> <span>error</span>
  <% @book.errors.full_messages.each do |message| %>
  <li>
    <%= message %>

  </li>
  <% end %>
 </ul>
 <% end %>

<%= form_for(@book) do |f| %> 
   <div class="field row">
	<p>Title</p>
	<%= f.text_field :title, class: "col-xs-12" %>
   </div>
   <div class="field row">
	<p>Opinipn</p>
	<%= f.text_area :body, class: "col-xs-12" %>
   </div>
	<div class="field row">
	<br><%= f.submit "Update Book", class: "btn btn-primary col-xs-12"%></br>
    </div>
<% end %> 
<%= link_to "Show", @book, class: "book_#{@book.id}" %>
   |
<%= link_to "Back", books_path, class: "back" %>

</div>
<div class="col-md-3"></div>

</div> 